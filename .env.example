# Tempo API Configuration
TEMPO_BASE_URL=https://api.tempo.io
TEMPO_REGION=global
TEMPO_API_VERSION=4

# Authentication - Choose one: token or oauth2
TEMPO_AUTH_TYPE=token

# Bearer Token Authentication
TEMPO_TOKEN=your_tempo_bearer_token_here

# OAuth2 Authentication
TEMPO_CLIENT_ID=
TEMPO_CLIENT_SECRET=
TEMPO_OAUTH_REFRESH_DISABLED=false

# HTTP Settings
TEMPO_TIMEOUT=30
TEMPO_RETRY_TIMES=3
TEMPO_RETRY_SLEEP=1000

# Caching (optional)
TEMPO_CACHE_ENABLED=false
TEMPO_CACHE_TTL=3600

# Webhooks
TEMPO_WEBHOOK_SECRET=your_webhook_secret_here
TEMPO_WEBHOOK_ROUTE=/api/webhooks/tempo

# Logging
TEMPO_LOG_ENABLED=true
TEMPO_LOG_CHANNEL=single
TEMPO_LOG_LEVEL=info
